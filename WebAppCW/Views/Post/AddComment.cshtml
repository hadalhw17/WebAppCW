@model WebAppCW.Models.PostComment
@{
    ViewData["Title"] = "AddComment";
}

<h2>AddComment</h2>


<div class="container">
            <br />
            <p>Your Comment</p>
            <form asp-action="AddComment" asp-route-id="@Model.Post.PostId">
                <div class="form-group">
                    <label asp-for="Comment.AuthorName" class="control-label"></label>
                    <input asp-for="Comment.AuthorName" class="form-control" />
                    <span asp-validation-for="Comment.AuthorName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment.CommentText" class="control-label"></label>
                    <input asp-for="Comment.CommentText" class="form-control" />
                    <span asp-validation-for="Comment.CommentText" class="text-danger"></span>
                    <input type="hidden" asp-for="Comment.PostID">@Model.Post.PostId</input>
                </div>                
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
