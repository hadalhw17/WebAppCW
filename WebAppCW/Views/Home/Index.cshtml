@model  IEnumerable<WebAppCW.Models.Post>
@using WebAppCW.Controllers

@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    @if (Model.Count() == 0)
    {
    <div class="container" style="padding-top:10px; width: 800px;">
        <!-- Jumbotron -->
        <div class="jumbotron p-0">

            <!-- Card image -->
            <div class="view overlay rounded-top">
                <img src="https://mdbootstrap.com/img/Photos/Slides/img%20(134).jpg" class="img-fluid" alt="Sample image">
                <a href="#">
                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>

            <!-- Card content -->
            <div class="card-body text-center mb-3">

                <!-- Title -->
                <h3 class="card-title h3 my-4"><strong>No posts yet.</strong></h3>
                <!-- Text -->
                <p class="card-text py-2">
                    Unfortunately, there are no posts created yet.
                    I am going to make some in a while, for now, please, enjoy this nice image.
                </p>
            </div>

        </div>
        <!-- Jumbotron -->
    </div>
    }
    @foreach (var post in Model)
    {
        <div class="container" style="padding-top:10px; width: 800px;" >
            <div class="row">
                <div class="col">
                    <!-- Card -->
                    <div class="card card-cascade wider">

                        <!-- Card image -->
                        <div class="view view-cascade gradient-card-header peach-gradient">

                            <!-- Title -->
                            <h2 class="card-header-title mb-3">@post.PostTitle</h2>
                            <!-- Text -->
                            <p class="mb-0"><i class="fas fa-calendar mr-2"></i>@post.TimeStamp</p>

                        </div>

                        <!-- Card content -->
                        <div class="card-body card-body-cascade text-center">

                            <!-- Text -->
                            <p class="card-text">@post.PostText</p>
                            <!-- Link -->
                            @Html.ActionLink("Read more", "Details", "Post", new { id = @post.PostId},
                           new { @class = "orange-text d-flex flex-row-reverse p-2" })

                        </div>
                        <!-- Card content -->

                    </div>
                    <!-- Card -->
                </div>
            </div>
        </div>
    }
</body>
</html>
